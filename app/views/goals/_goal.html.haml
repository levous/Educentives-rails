= div_for(goal, :class => 'record') do
  .float-right
    %table.meta-data
      %tr
        %th Points
        %th Due
        %th Completed
      %tr
        %td 
          = goal.point_value 
        %td
          = goal.target_datetime 
        %td
          = goal.completed_at ||'Not Complete'

  .row.title.record-title
    = link_to_unless_current(goal.title, goal)

  - if url_for() == url_for(goal) && goal.long_description.present?
    .row.description
      .record-label Description
      = goal.long_description
  .row.life-span
    %span.record-label Created 
    %span.record-value #{distance_of_time_in_words_to_now goal.created_at} ago
  .row.plan
    %span.record-label Plan
    - if goal.plan
      %span.record-value= link_to goal.plan.title, goal.plan
    - else
      Unplanned
  .clearer
