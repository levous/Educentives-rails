= form_for([assessment.goal.plan, assessment.goal, assessment], :remote => true) do |f|
  - if assessment.errors.any?
    #error_explanation
      %h2
        = pluralize(assessment.errors.count, "assessment")
        prohibited this assessment from being recorded
      %ul
        - @milstone.errors.full_messages.each do |msg|
          %li= msg
  #assessment_errors{:style=>'display:none'}
  .field
    = f.label :score
    %br
    = f.number_field :score
  .actions
    = f.hidden_field :goal_id 
    = f.submit


